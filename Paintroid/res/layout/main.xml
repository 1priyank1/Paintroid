<?xml version="1.0" encoding="utf-8"?>

<!-- This is the Layout for the Main Activity-->


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background"
    >
    
<!-- This is the SurfaceView (drawing area) for the Main -->
<at.tugraz.ist.paintroid.graphic.DrawingSurface
    android:id="@+id/surfaceview"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	/>


<RelativeLayout 
android:layout_marginLeft="8dip"
android:layout_marginTop="8dip"
android:layout_height="38dip" 
android:layout_width="38dip"  
android:id="@+id/ColorRelativeLayout"
android:background="#000000">

<Button 
android:id="@+id/btn_Color" 
android:layout_centerInParent="true"
android:layout_width="32dip"
android:layout_height="32dip"
android:background="@color/color_stroke_background">
</Button>

</RelativeLayout>

<RelativeLayout 
android:layout_below="@+id/ColorRelativeLayout"
android:layout_marginLeft="8dip"
android:layout_marginTop="8dip"
android:layout_height="38dip" 
android:layout_width="38dip"  
android:id="@+id/StrokeRelativeLayout"
android:background="#000000">

<ImageButton 
android:id="@+id/ibtn_Stroke" 
android:layout_centerInParent="true"
android:layout_width="32dip"
android:layout_height="32dip"
android:background="@drawable/rect32">

</ImageButton>

</RelativeLayout>

<!-- Main Menu at bottom -->

<RelativeLayout 
android:layout_height="50dip" 
android:layout_alignParentBottom="true"
android:layout_width="fill_parent" 
android:id="@+id/BottomRelativeLayout"
android:background="@color/main_menu">


	<ImageButton android:id="@+id/ibtn_Scroll" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_alignParentLeft="true"
	android:layout_marginLeft="5dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/choose32"></ImageButton>

	<ImageButton android:id="@+id/ibtn_Zoom" 
	android:layout_toRightOf="@+id/ibtn_Scroll" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/magnifying_glass32">
	</ImageButton>

	<ImageButton android:id="@+id/ibtn_Draw" 
	android:layout_toRightOf="@+id/ibtn_Zoom" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/draw32">
	</ImageButton>

	<ImageButton android:id="@+id/ibtn_Choose" 
	android:layout_toRightOf="@+id/ibtn_Draw" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/pipette32">
	</ImageButton>

	<ImageButton android:id="@+id/ibtn_Action" 
	android:layout_toRightOf="@+id/ibtn_Choose" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/action32">
	</ImageButton>

	<ImageButton android:id="@+id/ibtn_Undo" 
	android:layout_toRightOf="@+id/ibtn_Action" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/undo32">
	</ImageButton>

	<ImageButton android:id="@+id/ibtn_File" 
	android:layout_toRightOf="@+id/ibtn_Undo" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginRight="5dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/file32">
	</ImageButton>
	
</RelativeLayout>




</RelativeLayout>
