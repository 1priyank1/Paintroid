<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:showDividers="none" >
  
	<View android:layout_width="fill_parent"
	    android:layout_height="2dp"
	    android:background="#33B5E5"/>
    
	  <org.catrobat.paintroid.dialog.colorpicker.ColorPickerView
	    android:id="@+id/view_colorpicker"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
  
   <LinearLayout android:id="@+id/layout_colorbuttons"
      android:background="@drawable/tools_menu_background"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.001"
      android:gravity="center|center_vertical|center_horizontal"
      android:showDividers="beginning|middle|end"    
      android:orientation="horizontal"
      >

        <Button
            android:id="@+id/btn_colorchooser_ok"
            android:layout_width="fill_parent"
            android:text="@string/ok"
            android:textSize="14dp"
            android:layout_height="48dp"
            android:paddingTop="16dp"
            android:textColor="#FFFFFF" />
    
    </LinearLayout>
    
</LinearLayout>

