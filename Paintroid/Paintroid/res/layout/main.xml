<?xml version="1.0" encoding="utf-8"?>

<!-- This is the Layout for the Main Activity-->


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/main_background">
    
<at.tugraz.ist.paintroid.graphic.DrawingSurface
android:id="@+id/surfaceview"
android:layout_width="fill_parent"
android:layout_height="fill_parent"/>


<!-- top left buttons -->
<RelativeLayout 
android:layout_marginLeft="8dip"
android:layout_marginTop="8dip"
android:layout_height="38dip"
android:layout_width="38dip"
android:id="@+id/ColorRelativeLayout"
android:background="#000000">
	<Button 
	android:id="@+id/btn_Color" 
	android:layout_centerInParent="true"
	android:layout_width="32dip"
	android:layout_height="32dip"
	android:background="@color/color_stroke_background">
	</Button>
</RelativeLayout>

<RelativeLayout 
android:layout_below="@+id/ColorRelativeLayout"
android:layout_marginLeft="8dip"
android:layout_marginTop="8dip"
android:layout_height="38dip" 
android:layout_width="38dip"  
android:id="@+id/StrokeRelativeLayout"
android:background="#000000">
	<ImageButton 
	android:id="@+id/ibtn_brushStroke" 
	android:layout_centerInParent="true"
	android:layout_width="32dip"
	android:layout_height="32dip"
	android:background="@drawable/rect32">
	</ImageButton>
</RelativeLayout>
<!-- top left buttons -->

<include layout="@layout/main_toolbar"/>

</RelativeLayout>
