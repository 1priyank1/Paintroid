<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:paintroid="http://schemas.android.com/apk/res/at.tugraz.ist.paintroid"
android:layout_height="50dip" 
android:layout_alignParentBottom="true"
android:layout_width="fill_parent" 
android:id="@+id/main_toolbar"
android:background="@color/main_menu">

	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_handTool"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_alignParentLeft="true"
	android:layout_marginLeft="5dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:onClick="onToolbarClick"
	paintroid:onLongClick="onToolbarLongClick"
	paintroid:imageNormal="@drawable/ic_hand"
	paintroid:imageActive="@drawable/ic_hand_active"
	/>

	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_zoomTool" 
	android:layout_toRightOf="@+id/ibtn_handTool" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:onClick="onToolbarClick"
	paintroid:onLongClick="onToolbarLongClick"
	paintroid:imageNormal="@drawable/ic_zoom"
	paintroid:imageActive="@drawable/ic_zoom_active"
	/>

	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_brushTool" 
	android:layout_toRightOf="@+id/ibtn_zoomTool" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:onClick="onToolbarClick"
	paintroid:onLongClick="onToolbarLongClick"
	paintroid:imageNormal="@drawable/ic_brush"
	paintroid:imageActive="@drawable/ic_brush_active"
	/>

	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_eyeDropperTool" 
	android:layout_toRightOf="@+id/ibtn_brushTool" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:onClick="onToolbarClick"
	paintroid:onLongClick="onToolbarLongClick"
	paintroid:imageNormal="@drawable/ic_eyedropper"
	paintroid:imageActive="@drawable/ic_eyedropper_active"
	/>

	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_magicWandTool" 
	android:layout_toRightOf="@+id/ibtn_eyeDropperTool" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:onClick="onToolbarClick"
	paintroid:onLongClick="onToolbarLongClick"
	paintroid:imageNormal="@drawable/ic_magicwand"
	paintroid:imageActive="@drawable/ic_magicwand_active"
	/>

	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_undoTool" 
	android:layout_toRightOf="@+id/ibtn_magicWandTool" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/ic_undo"
	android:onClick="onToolbarClick"
	paintroid:onLongClick="onToolbarLongClick"
	/>
	
	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_redoTool" 
    android:layout_toRightOf="@+id/ibtn_undoTool" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="10dip"
    android:layout_marginBottom="5dip"
    android:layout_marginTop="4dip"
    android:background="@drawable/ic_redo"
    android:onClick="onToolbarClick"
    paintroid:onLongClick="onToolbarLongClick"
    />

	<at.tugraz.ist.paintroid.ToolbarButton android:id="@+id/ibtn_fileActivity" 
	android:layout_toRightOf="@+id/ibtn_redoTool" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginLeft="10dip"
	android:layout_marginRight="5dip"
	android:layout_marginBottom="5dip"
	android:layout_marginTop="4dip"
	android:background="@drawable/ic_filemanager"
	android:onClick="onToolbarClick"
	paintroid:onLongClick="onToolbarLongClick"
	/>
	
</RelativeLayout>
