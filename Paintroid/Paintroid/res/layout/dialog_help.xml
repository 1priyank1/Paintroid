<?xml version="1.0" encoding="utf-8"?>

<!-- This is the Layout for the help Dialog-->

<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content">
 
<ImageView android:id="@+id/help_iview_Title"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content"
 android:layout_centerHorizontal="true" />
 
 <ScrollView android:id="@+id/help_sview"
 android:layout_width="wrap_content" 
 android:layout_marginTop="15dip"
 android:layout_below="@+id/help_iview_Title"
 android:layout_height="wrap_content">
 
 <TextView android:id="@+id/help_tview_Text"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content"
 />
 
 </ScrollView>
 
 <Button android:id="@+id/help_btn_Done" 
 android:layout_below="@id/help_sview"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content"
 android:paddingLeft="50dip"
 android:paddingRight="50dip"
 android:layout_centerHorizontal="true" 
  />
 
</RelativeLayout>