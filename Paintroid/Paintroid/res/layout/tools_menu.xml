<?xml version="1.0" encoding="utf-8"?>
    <TableLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/tableLayoutToolsMenu"
      android:layout_height="fill_parent"
      android:layout_width="fill_parent"
      android:stretchColumns="1">
        <TableRow
          android:id="@+id/tableRow1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
            <ImageButton android:id="@+id/ibtn_menu_draw"  
						  android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:background="@drawable/draw64">
					  </ImageButton>
					  <ImageButton android:id="@+id/ibtn_menu_choose"  
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/choose64">
            </ImageButton>
					  <ImageButton android:id="@+id/ibtn_menu_magic"  
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/action64">
            </ImageButton>
            <ImageButton android:id="@+id/ibtn_menu_middlepoint"  
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@android:drawable/ic_menu_mylocation">
            </ImageButton>
        </TableRow>
    </TableLayout>
