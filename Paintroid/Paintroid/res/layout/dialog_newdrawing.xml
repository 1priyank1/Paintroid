<?xml version="1.0" encoding="utf-8"?>

<!-- This is the Layout for the New Drawing Dialog-->

<RelativeLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content">
 
 <LinearLayout 
    android:orientation="horizontal"
    android:id="@+id/newdrawing_layout_buttons" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/newdrawing_tview_Text" 
    >
     
   <Button android:layout_height="wrap_content" 
   android:text="@string/dialog_newdrawing_btn_empty" 
   android:id="@+id/newdrawing_btn_EmptyDrawing" 
   android:layout_width="wrap_content" 
   android:layout_weight="1"
   android:drawableTop="@drawable/ic_plain_document_48">
   </Button>
 
   <Button android:layout_height="wrap_content" 
   android:text="@string/dialog_newdrawing_btn_fromcam" 
   android:id="@+id/newdrawing_btn_FromCam" 
   android:layout_width="wrap_content"  
   android:drawableTop="@drawable/ic_camera_48"
   android:layout_weight="1"
   android:layout_toRightOf="@+id/newdrawing_btn_EmptyDrawing"
   android:layout_alignTop="@id/newdrawing_btn_EmptyDrawing"
   ></Button>
 
 </LinearLayout>
 
 <Button android:layout_height="wrap_content" 
 android:paddingRight="10dip" 
 android:text="@string/cancel" 
 android:id="@+id/newdrawing_btn_Cancel" 
 android:layout_below="@+id/newdrawing_layout_buttons"
 android:layout_width="fill_parent" 
 android:paddingLeft="5dip"></Button>
 
</RelativeLayout>
