<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dialog_subtitle"
        android:text="@string/dialog_resizeimage_title"
        android:textSize="20sp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="16dp"
        android:layout_marginTop="28dp"
        android:textStyle="bold" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/dialog_subtitle_border" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        >





    <EditText android:id="@+id/resizeimage_dialog_imagewidth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textCursorDrawable="@null"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:numeric="integer" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="x"
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_weight="0.3"
            android:textColor="#ffffffff" />

        <EditText android:id="@+id/resizeimage_dialog_imageheight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textCursorDrawable="@null"
        android:layout_weight="1"
        android:textColor="#ffffff"
            android:numeric="integer" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="px"
            android:id="@+id/textView3"
            android:layout_weight="0.3"
            android:textColor="#ffffffff" />
    </LinearLayout>
    <CheckBox android:id="@+id/resizeimage_dialog_maintain_aspect_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#ffffff"
        android:layout_marginTop="32dp"
        android:text="@string/dialog_resizeimage_maintain_aspect_ratio" />

</LinearLayout>