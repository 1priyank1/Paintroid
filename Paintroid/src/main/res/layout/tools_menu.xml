<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/gridview_layout">

    <TextView
        android:id="@+id/gridview_recent_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_recent_tools"
        android:textSize="16dp"
        android:paddingLeft="2dp"/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview_recent_tools_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"

        android:listSelector="@drawable/attribute_button_selector"
        android:stretchMode="columnWidth"/>

    <View
        android:id="@+id/gridview_recent_horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview_tools_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"

        android:listSelector="@drawable/attribute_button_selector"
        android:stretchMode="columnWidth"/>

</LinearLayout>
 
